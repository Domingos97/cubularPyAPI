############################################################
# CUBULAR ENVIRONMENT CONFIGURATION EXAMPLE
# Copy this file to .env and fill in your actual values
############################################################
PYTHON_VERSION=3.11.0

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=your_db_name
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password
DATABASE_SSL=false

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_SECRET=your_encryption_secret_here

# Server Configuration
PORT=8000
NODE_ENV=development

# Allowed Origins (CORS)
ALLOWED_ORIGINS=http://localhost:8080,https://cubularpyfront-production.up.railway.app

# Email Configuration (SMTP settings)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_smtp_password
SMTP_FROM=your_email@example.com
SMTP_TLS=true

# Application Settings
APP_NAME=CubularPyAPI
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=DEBUG

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=survey_data

# Vector Search Settings
VECTOR_CACHE_DIR=vector_cache
DEFAULT_SIMILARITY_THRESHOLD=0.25
MAX_SEARCH_RESULTS=10000

# Database Pool Settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=5

# JWT and Token Expiry
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Sender (optional, fallback for SMTP_FROM)
FROM_EMAIL=noreply@example.com